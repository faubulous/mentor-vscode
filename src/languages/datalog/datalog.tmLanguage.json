{
    "scopeName": "source.datalog",
    "uuid": "d8e3f9a1-7b4c-4e6d-9f8a-1c2d3e4f5a6b",
    "name": "Datalog",
    "fileTypes": ["dl", "datalog"],
    "patterns": [
        {
            "include": "#comment"
        },
        {
            "include": "#directive"
        },
        {
            "include": "#rule"
        }
    ],
    "repository": {
        "comment": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.datalog",
                    "match": "//.*$"
                },
                {
                    "name": "comment.line.percentage.datalog",
                    "match": "%.*$"
                },
                {
                    "name": "comment.block.datalog",
                    "begin": "/\\*",
                    "end": "\\*/"
                }
            ]
        },
        "directive": {
            "patterns": [
                {
                    "begin": "(@prefix)\\s+",
                    "beginCaptures": {
                        "1": {
                            "name": "keyword.control.directive.datalog"
                        }
                    },
                    "end": "\\.",
                    "patterns": [
                        {
                            "name": "storage.type.prefix.datalog",
                            "match": "([a-zA-Z0-9_]*)?:"
                        },
                        {
                            "include": "#iri"
                        }
                    ]
                },
                {
                    "begin": "(@include)\\s+",
                    "beginCaptures": {
                        "1": {
                            "name": "keyword.control.directive.datalog"
                        }
                    },
                    "end": "(?=\\s|$|//|%)",
                    "patterns": [
                        {
                            "include": "#iri"
                        },
                        {
                            "include": "#literal"
                        }
                    ]
                },
                {
                    "name": "keyword.control.directive.datalog",
                    "match": "^\\s*(\\.decl|\\.input|\\.output|\\.type|\\.symbol_type|\\.number_type|\\.comp|\\.init|\\.override|\\.printsize|\\.functor|\\.pragma|\\.include|\\.once|\\.define|\\.ifdef|\\.ifndef|\\.else|\\.endif)\\b"
                },
                {
                    "begin": "^\\s*(\\.decl)\\s+",
                    "beginCaptures": {
                        "1": {
                            "name": "keyword.control.directive.datalog"
                        }
                    },
                    "end": "(?=\\()",
                    "patterns": [
                        {
                            "name": "entity.name.function.relation.datalog",
                            "match": "[a-zA-Z_][a-zA-Z0-9_]*"
                        }
                    ]
                },
                {
                    "begin": "^\\s*(\\.type)\\s+",
                    "beginCaptures": {
                        "1": {
                            "name": "keyword.control.directive.datalog"
                        }
                    },
                    "end": "(?=$|//|%)",
                    "patterns": [
                        {
                            "name": "entity.name.type.datalog",
                            "match": "[a-zA-Z_][a-zA-Z0-9_]*"
                        },
                        {
                            "name": "keyword.operator.assignment.datalog",
                            "match": "<:|="
                        },
                        {
                            "name": "keyword.operator.union.datalog",
                            "match": "\\|"
                        },
                        {
                            "include": "#builtin_types"
                        }
                    ]
                }
            ]
        },
        "rule": {
            "patterns": [
                {
                    "include": "#keywords"
                },
                {
                    "include": "#operators"
                },
                {
                    "include": "#iri"
                },
                {
                    "include": "#prefixed_name"
                },
                {
                    "include": "#atom"
                },
                {
                    "include": "#variable"
                },
                {
                    "include": "#literal"
                },
                {
                    "include": "#aggregation"
                },
                {
                    "include": "#builtin_types"
                },
                {
                    "name": "keyword.operator.implication.datalog",
                    "match": ":-|<-"
                },
                {
                    "name": "punctuation.terminator.rule.datalog",
                    "match": "\\."
                },
                {
                    "name": "punctuation.separator.datalog",
                    "match": ","
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.datalog",
                    "match": "\\b(not|!)\\b"
                },
                {
                    "name": "keyword.other.datalog",
                    "match": "\\b(as|nil|true|false)\\b"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.comparison.datalog",
                    "match": "(<=|>=|!=|<|>|=)"
                },
                {
                    "name": "keyword.operator.arithmetic.datalog",
                    "match": "(\\+|-|\\*|/|%|\\^|band|bor|bxor|bnot|land|lor|lnot)"
                },
                {
                    "name": "keyword.operator.string.datalog",
                    "match": "\\bcat\\b"
                }
            ]
        },
        "iri": {
            "name": "variable.other.constant.datalog",
            "match": "<[^>]*>"
        },
        "prefixed_name": {
            "match": "(([a-zA-Z0-9_]*)?(:))([a-zA-Z0-9_\\.-]*)?",
            "captures": {
                "1": {
                    "name": "storage.type.prefix.datalog"
                }
            }
        },
        "atom": {
            "patterns": [
                {
                    "match": "([a-zA-Z_][a-zA-Z0-9_]*)\\s*(\\()",
                    "captures": {
                        "1": {
                            "name": "entity.name.function.relation.datalog"
                        },
                        "2": {
                            "name": "punctuation.definition.parameters.begin.datalog"
                        }
                    }
                }
            ]
        },
        "variable": {
            "patterns": [
                {
                    "name": "variable.other.anonymous.datalog",
                    "match": "\\b_\\b"
                },
                {
                    "name": "variable.parameter.datalog",
                    "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
                },
                {
                    "name": "variable.other.datalog",
                    "match": "\\b[a-z][a-zA-Z0-9_]*\\b"
                }
            ]
        },
        "aggregation": {
            "patterns": [
                {
                    "name": "support.function.aggregate.datalog",
                    "match": "\\b(count|sum|min|max|mean|range)\\b"
                }
            ]
        },
        "builtin_types": {
            "patterns": [
                {
                    "name": "support.type.builtin.datalog",
                    "match": "\\b(number|symbol|unsigned|float)\\b"
                }
            ]
        },
        "literal": {
            "patterns": [
                {
                    "name": "string.quoted.double.datalog",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.datalog",
                            "match": "\\\\."
                        }
                    ]
                },
                {
                    "name": "string.quoted.single.datalog",
                    "begin": "'",
                    "end": "'",
                    "patterns": [
                        {
                            "name": "constant.character.escape.datalog",
                            "match": "\\\\."
                        }
                    ]
                },
                {
                    "name": "constant.numeric.integer.datalog",
                    "match": "\\b[0-9]+\\b"
                },
                {
                    "name": "constant.numeric.float.datalog",
                    "match": "\\b[0-9]+\\.[0-9]+([eE][+-]?[0-9]+)?\\b"
                },
                {
                    "name": "constant.numeric.hex.datalog",
                    "match": "\\b0x[0-9a-fA-F]+\\b"
                },
                {
                    "name": "constant.numeric.binary.datalog",
                    "match": "\\b0b[01]+\\b"
                }
            ]
        }
    }
}
