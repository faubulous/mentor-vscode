{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out",
    "module": "commonjs",
    "sourceMap": true,
    "types": [
      "vitest/globals",
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "out"
  ],
  "include": [
    "vitest.config.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}