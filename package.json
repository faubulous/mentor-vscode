{
  "name": "mentor",
  "displayName": "Mentor",
  "description": "Create ontologies and knowledge graph projects with Visual Studio code.",
  "version": "0.0.1",
  "publisher": "faubulous",
  "private": false,
  "license": "GPL",
  "repository": {
    "type": "git",
    "url": "https://github.com/faubulous/mentor-vscode"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile:font": "node ./build/update-font.js",
    "compile": "node ./esbuild.js",
    "package": "NODE_ENV=production node ./esbuild.js",
    "watch": "node ./esbuild.js --watch",
    "test": "npx jest",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/mkdirp": "^0.5.2",
    "@types/n3": "^1.16.0",
    "@types/node": "^16.18.34",
    "@types/rimraf": "^2.0.2",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "esbuild": "^0.16.10",
    "esbuild-plugin-copy": "^2.0.1",
    "eslint": "^8.26.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2",
    "webfont": "^11.2.26"
  },
  "dependencies": {
    "@faubulous/mentor-rdf": "^0.1.8",
    "@vscode/webview-ui-toolkit": "^1.2.2",
    "millan": "^5.3.0",
    "n3": "^1.17.1",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11"
  },
  "activationEvents": [
    "onLanguage:plaintext"
  ],
  "contributes": {
    "languages": [
      {
        "id": "ntriples",
        "aliases": [
          "N-Triples",
          "ntriples"
        ],
        "extensions": [
          ".nt",
          ".n3"
        ],
        "configuration": "./src/languages/language-config-turtle.json",
        "icon": {
          "light": "./media/icons/ontology-light.svg",
          "dark": "./media/icons/ontology-dark.svg"
        }
      },
      {
        "id": "nquads",
        "aliases": [
          "N-Quads",
          "nquads"
        ],
        "extensions": [
          ".nq"
        ],
        "configuration": "./src/languages/language-config-turtle.json",
        "icon": {
          "light": "./media/icons/ontology-light.svg",
          "dark": "./media/icons/ontology-dark.svg"
        }
      },
      {
        "id": "turtle",
        "aliases": [
          "Turtle",
          "ttl"
        ],
        "extensions": [
          ".ttl"
        ],
        "configuration": "./src/languages/language-config-turtle.json",
        "icon": {
          "light": "./media/icons/ontology-light.svg",
          "dark": "./media/icons/ontology-dark.svg"
        }
      },
      {
        "id": "trig",
        "aliases": [
          "TriG",
          "trig"
        ],
        "extensions": [
          ".trig"
        ],
        "configuration": "./src/languages/language-config-trig.json",
        "icon": {
          "light": "./media/icons/ontology-light.svg",
          "dark": "./media/icons/ontology-dark.svg"
        }
      },
      {
        "id": "sparql",
        "aliases": [
          "SPARQL",
          "sparql"
        ],
        "extensions": [
          ".sparql"
        ],
        "configuration": "./src/languages/language-config-sparql.json",
        "icon": {
          "light": "./media/icons/sparql-light.svg",
          "dark": "./media/icons/sparql-dark.svg"
        }
      }
    ],
    "semanticTokenScopes": [
      {
        "language": "turtle",
        "scopes": {
          "namespace": [
            "storage.modifier.turtle"
          ]
        }
      },
      {
        "language": "sparql",
        "scopes": {
          "namespace": [
            "storage.modifier.turtle"
          ]
        }
      }
    ],
    "icons": {
      "app-mentor": {
        "description": "Mentor icon",
        "default": {
          "fontPath": "./media/mentor-icons.woff",
          "fontCharacter": "\\e000"
        }
      },
      "rdf-class": {
        "description": "Class icon",
        "default": {
          "fontPath": "./media/mentor-icons.woff",
          "fontCharacter": "\\e001"
        }
      },
      "rdf-class-eq": {
        "description": "Equivalent class icon",
        "default": {
          "fontPath": "./media/mentor-icons.woff",
          "fontCharacter": "\\e002"
        }
      },
      "rdf-class-ref": {
        "description": "Referenced class icon",
        "default": {
          "fontPath": "./media/mentor-icons.woff",
          "fontCharacter": "\\e003"
        }
      },
      "rdf-individual": {
        "description": "Individual icon",
        "default": {
          "fontPath": "./media/mentor-icons.woff",
          "fontCharacter": "\\e004"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mentor",
          "title": "Mentor",
          "icon": "media/icons/0-mentor.svg"
        }
      ]
    },
    "views": {
      "mentor": [
        {
          "id": "mentor.classExplorer",
          "name": "Classes"
        },
        {
          "id": "mentor.propertyExplorer",
          "name": "Properties"
        },
        {
          "id": "mentor.individualExplorer",
          "name": "Individuals"
        }
      ]
    },
    "commands": [
      {
        "command": "mentor.classExplorer.command.toggleReferenced",
        "title": "Show or hide referenced terms",
        "icon": "$(color-mode)"
      },
      {
        "command": "mentor.classExplorer.command.refreshEntry",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "mentor.classExplorer.command.editEntry",
        "title": "Edit"
      },
      {
        "command": "mentor.classExplorer.command.deleteEntry",
        "title": "Delete"
      },
      {
        "command": "mentor.command.selectClass",
        "title": "Go to Definition",
        "icon": "$(go-to-file)",
        "when": false
      },
      {
        "command": "mentor.command.selectProperty",
        "title": "Go to Definition",
        "icon": "$(go-to-file)",
        "when": false
      },
      {
        "command": "mentor.command.selectIndividual",
        "title": "Go to Definition",
        "icon": "$(go-to-file)",
        "when": false
      },
      {
        "command": "mentor.command.openExternal",
        "title": "Open in Browser",
        "icon": "$(globe)"
      },
      {
        "command": "mentor.command.openSettings",
        "title": "Mentor: Open Settings",
        "icon": "$(gear)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "mentor.classExplorer.command.toggleReferenced",
          "when": "view == mentor.classExplorer",
          "group": "navigation@1"
        },
        {
          "command": "mentor.classExplorer.command.refreshEntry",
          "when": "view == mentor.classExplorer",
          "group": "navigation@2"
        },
        {
          "command": "mentor.command.openSettings",
          "group": "2_configuration"
        }
      ],
      "view/item/context": [
        {
          "command": "mentor.command.selectClass",
          "when": "view == mentor.classExplorer && viewItem == class",
          "group": "navigation"
        },
        {
          "command": "mentor.command.selectProperty",
          "when": "view == mentor.propertyExplorer && viewItem == property",
          "group": "navigation"
        },
        {
          "command": "mentor.command.selectIndividual",
          "when": "view == mentor.individualExplorer && viewItem == individual",
          "group": "navigation"
        },
        {
          "command": "mentor.command.openExternal",
          "when": "view == mentor.classExplorer && viewItem == class",
          "group": "navigation"
        },
        {
          "command": "mentor.classExplorer.command.deleteEntry",
          "when": "view == mentor.classExplorer && viewItem == class",
          "group": "7_modification"
        }
      ]
    },
    "configurationDefaults": {
      "[sparql]": {
        "editor.wordBasedSuggestionsMode": "allDocuments"
      },
      "[turtle]": {
        "editor.wordBasedSuggestionsMode": "allDocuments"
      },
      "[trig]": {
        "editor.wordBasedSuggestionsMode": "allDocuments"
      },
      "[ntriples]": {
        "editor.wordBasedSuggestionsMode": "allDocuments"
      },
      "[nquads]": {
        "editor.wordBasedSuggestionsMode": "allDocuments"
      }
    },
    "configuration": [
      {
        "type": "object",
        "id": "mentorSettings",
        "title": "Mentor",
        "order": 1,
        "properties": {
          "mentor.namespaces": {
            "type": "array",
            "title": "Namespaces",
            "description": "Manage the namespace URIs to be used in vocabularies.",
            "items": {
              "type": "object",
              "properties": {
                "uri": {
                  "type": "string",
                  "description": "The namespace URI."
                },
                "defaultPrefix": {
                  "type": "string",
                  "description": "The default abbreviation to be used for the namespace URI if no other is defined."
                }
              }
            },
            "default": [
              {
                "uri": "http://www.w3.org/1999/02/22-rdf-syntax-ns#",
                "defaultPrefix": "rdf"
              },
              {
                "uri": "http://www.w3.org/2000/01/rdf-schema#",
                "defaultPrefix": "rdfs"
              },
              {
                "uri": "http://www.w3.org/ns/rdfa#",
                "defaultPrefix": "rdfa"
              },
              {
                "uri": "http://www.w3.org/2002/07/owl#",
                "defaultPrefix": "owl"
              },
              {
                "uri": "http://www.w3.org/2004/02/skos/core#",
                "defaultPrefix": "skos"
              },
              {
                "uri": "http://schema.org/",
                "defaultPrefix": "schema"
              },
              {
                "uri": "https://schema.org/",
                "defaultPrefix": "schema"
              }
            ]
          }
        },
        "mentor.language.turtle.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        }
      }
    ]
  }
}